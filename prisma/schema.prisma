generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Course {
  id               Int      @id @default(autoincrement())
  title            String
  description      String
  distanceKm       Float?
  estimatedMinutes Int?
  level            String
  region           String?
  tags             String
  path             String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
